{
  "name": "afelu-guardian",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "concurrently \"node index.js\" \"npx prisma studio\"",
    "build": "npm run db:generate && npm run db:push",
    "postinstall": "npx prisma generate",
    "db:generate": "npx prisma generate",
    "db:push": "npx prisma db push",
    "db:migrate": "npx prisma migrate dev",
    "db:seed": "node scripts/seed.js",
    "bot:register": "node scripts/register-commands.js",
    "bot:reset": "pkill -f 'node.*index.js' || true",
    "setup": "npm run db:generate && npm run bot:register",
    "railway:build": "npm run db:generate && npm run db:push"
  },
  "keywords": [
    "ai-education",
    "digital-literacy",
    "ethiopia",
    "chatgpt-training",
    "ai-skills"
  ],
  "author": "Yoseph Berhane Gebremedhin",
  "license": "ISC",
  "description": "Afelu Guardian - AI Education & Digital Literacy Platform for Ethiopians supporting Digital Ethiopia 2025",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.57.0",
    "@prisma/client": "^6.13.0",
    "concurrently": "^9.2.0",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "express-rate-limit": "^8.0.1",
    "express-validator": "^7.2.1",
    "jsdom": "^25.0.1",
    "nanoid": "^5.1.5",
    "node-cache": "^5.1.2",
    "node-telegram-bot-api": "^0.66.0",
    "nodemailer": "^7.0.5",
    "pg": "^8.16.3",
    "prisma": "^6.13.0",
    "stripe": "^18.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
